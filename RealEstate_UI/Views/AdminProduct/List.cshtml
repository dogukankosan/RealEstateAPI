@model List<ResultProductDto>
@{
    ViewData["Title"] = "IlanLıste";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">İlan Listesi</h6>
    <hr />
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">İlan Başlık</th>
                    <th scope="col">İlan Açıklama</th>
                    <th scope="col">İlan Fiyatı</th>
                    <th scope="col">İlan Resim</th>
                    <th scope="col">İlan İl</th>
                    <th scope="col">İlan İlçe</th>
                    <th scope="col">İlan Adres</th>
                    <th scope="col">İlan Durum</th>
                    <th scope="col">İlan Tipi</th>
                    <th scope="col">İlan Güncelle</th>
                    <th scope="col">İlan Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ResultProductDto item in Model)
                {
                    string _status = item.ProductStatus ? "Aktif" : "Pasif";
                    string className = item.ProductStatus ? "alert-success" : "alert-danger";
                    <tr>
                        <th scope="row">@item.ProductID</th>
                        <td>@item.CategoryName</td>
                        <td>@item.ProductTitle</td>
                        <td>@item.ProductDesc</td>
                        <td>@item.ProductPrice</td>
                        <td><img src="@item.ProductCoverImage" width="50" height="50" alt="..." /></td>
                        <td>@item.ProductCity</td>
                        <td>@item.ProductDistrict</td>
                        <td>@item.ProductAddress</td>
                        <td>
                            <span class="@className">
                                <a class="btn">
                                    @_status
                                </a>
                            </span>
                        </td>
                        <td>@item.ProductType</td>
                        <td><a href="~/AdminUrun/Guncelle/@item.ProductID" class="btn btn-primary">Güncelle</a></td>
                        <td><a href="~/AdminUrun/Sil/@item.ProductID" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <a href="~/AdminIlanlar/Ekle" class="btn btn-success">Yeni İlan Ekle</a>
</div>