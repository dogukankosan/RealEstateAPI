@model List<ResultPopularLocationDto>
@{
    Layout = null;
}
<section class="locations-1 popular" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="heading text-center mx-auto">
                <h6 class="title-small">Şehİrler</h6>
                <h3 class="title-big">Popüler Lokasyonlar</h3>
            </div>
            <div class="row pt-5">
                @foreach (ResultPopularLocationDto item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-6 mt-sm-4 mt-3 pt-md-2">
                        <a href="#url">
                            <div class="box16">
                                <img style="height:180px;width:400px;" class="img-fluid" src="@item.ImageURL" alt="...">
                                <div class="box-content">
                                    <h3 class="title mb-1">@item.CityName</h3>
                                    <span class="post">4 listings</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>