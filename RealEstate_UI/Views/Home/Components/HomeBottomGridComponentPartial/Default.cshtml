@model List<ResultBottomGridDto>
@{
    Layout = null;
    string className = "col-lg-4 col-md-6 grids-feature";
    byte count = 0;
}
<section class="w3l-bottom-grids py-5" id="steps">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="grids-area-hny main-cont-wthree-fea row">
            @foreach (ResultBottomGridDto item in Model)
            {
                <div class=@className>
                    <div class="area-box no-box-shadow">
                        <span class="@item.Icon fa-2x"></span>
                        <h4><a href="#feature" class="title-head">@item.Title</a></h4>
                        <p>@item.Description</p>
                        <a href="#more" class="more">Daha Fazla Oku <span class="fa fa-long-arrow-right"></span> </a>
                    </div>
                </div>
                if (count == 0)
                    className = "col-lg-4 col-md-6 grids-feature mt-md-0 mt-4";
                else if (count == 1)
                    className = "col-lg-4 col-md-6 grids-feature mt-lg-0 mt-4";
            }
        </div>
    </div>
</section>