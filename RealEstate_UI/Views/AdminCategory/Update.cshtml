@model UpdateCategoryDto
@{
    ViewData["Title"] = "KategoriGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Güncelle</h6>
        <hr />
        <form asp-action="Guncelle" asp-controller="AdminKategori" method="post">
            <div class="row mb-1">
                <input type="hidden" asp-for="@Model.CategoryID" />
                <label for="" class="col-sm-4 col-form-label">Kategori Adı:</label>
                <div class="col-sm-8">
                    <input value="@Model.CategoryName" name="CategoryName" type="text" class="form-control" id="">
                </div>
            </div>
            <br />
            <div class="row mb-2 align-items-center">
                <legend class="col-sm-4 col-form-label pt-0">Kategori Durum:</legend>
                <div class="col-sm-8">
                    <div class="form-check">
                        <input checked="@Model.CategoryStatus" name="CategoryStatus" value="1" class="form-check-input" type="checkbox" id="CategoryStatus">
                    </div>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-success">Kategori Güncelle</button>
        </form>
    </div>
</div>